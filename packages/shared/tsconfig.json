{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "composite": true,
    "strict": true,

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "include": ["src"],
}
